<% layout("/layouts/boilerplate") %>
    <body>   
        <div id="filters">
            <div class="icon"><i id="left" class="fa-solid fa-angle-left"></i></div>
           <div class="wrapper">
            <div class="filter">
                
                <button class="filter-btn" onclick="filterListing('All')" style="display: none;">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <p>
                        All
                    </p>
                </button>
            </div>
            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Trending')">
                    <i class="fa-solid fa-fire"></i>
                    <p>
                        Trending
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Rooms')">
                    <i class="fa-solid fa-bed"></i>
                    <p>
                        Rooms
                    </p>
                </button>

            </div>



            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Mountains')">
                    <i class="fa-solid fa-mountain"></i>
                    <p>
                        Mountains
                    </p>
                </button>

            </div>


            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Camping')">
                    <i class="fa-solid fa-tents"></i>
                    <p>
                        Camping
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Farm')">
                    <i class="fa-solid fa-cow"></i>
                    <p>
                        Farm
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Arctic')">
                    <i class="fa-solid fa-snowman"></i>
                    <p>
                        Arctic
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Domes')">
                    <i class="fa-solid fa-landmark-dome"></i>
                    <p>
                        Domes
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Lake')">
                    <i class="fa-solid fa-water"></i>
                    <p>
                        Lake
                    </p>
                </button>

            </div>
            <div class="filter">
                <button class="filter-btn" onclick="filterListing('AmazingPools')">
                    <i class="fa-solid fa-person-swimming"></i>
                    <p>
                        Amazing Pools
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('IconicCities')">
                    <i class="fa-solid fa-mountain-city"></i>
                    <p>
                        Iconic Cities
                    </p>
                </button>

            </div>

            <div class="filter">
                <button class="filter-btn" onclick="filterListing('Castles')">
                    <i class="fa-brands fa-fort-awesome"></i>
                    <p>
                        Castles
                    </p>
                </button>

            </div>
            </div>
            <div class="icon"><i id="right" class="fa-solid fa-angle-right"></i></div>


            
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <label class="form-check-label" for="flexSwitchCheckDefault">After taxes</label>
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            
                </div>
            </div>
        
        </div>
        

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let list of allListings) { %>
                <div class="cards  <%= list.category %> hide">
                    <a href="/listing/<%= list._id %>" class="listing-link">
                        <div class="card col listing-card  ">
                            <img src="<%=list.image.url%>" style="height: 20rem;" class="card-img-top" alt="image">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b class="listing-title">
                                        <%= list.title%>
                                    </b>
                                    <br>
                                    &#8377;<%=list.price.toLocaleString("en-IN")%>/night &nbsp; &nbsp; <i
                                            class="tax-info">+
                                            18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>



    </body>